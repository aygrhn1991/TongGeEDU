
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CourseListView</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Extensions/Plugins/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Extensions/Plugins/css/animate.css" rel="stylesheet" />
    <link href="~/Extensions/Plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Extensions/Plugins/css/style.css" rel="stylesheet" />
    <style>
        .label {
            margin-right: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body class="gray-bg" ng-app="app" ng-controller="ctrl">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <a href="/Admin/CourseAddEditView?id=0" class="btn btn-primary">添加</a>
                    </div>
                    <div class="ibox-content">
                        <p>
                            学年：<span class="label" ng-repeat="g in grades" ng-click="setgrade($event,g)">{{g}}</span>
                        </p>
                        <p>
                            科目：<span class="label" ng-repeat="s in subjects" ng-click="setsubject($event,s)">{{s}}</span>
                        </p>
                        <hr />
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th style="width:5%;">ID</th>
                                    <th style="width:10%;">年级</th>
                                    <th style="width:10%;">科目</th>
                                    <th style="width:20%;">标题</th>
                                    <th style="width:10%;">老师</th>
                                    <th style="width:30%;">浏览</th>
                                    <th style="width:10%;">价格</th>
                                    <th style="width:5%;">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="l in list">
                                    <td>{{l.id}}</td>
                                    <td>{{l.grade}}</td>
                                    <td>{{l.subject}}</td>
                                    <td>{{l.title}}</td>
                                    <td>{{l.teacher}}</td>
                                    <td>
                                        <img src="~/Attachments/course/{{l.filename}}" style="width:100%;height:160px;" />
                                    </td>
                                    <td>{{l.price}}</td>
                                    <td>
                                        <a href="/Admin/CourseAddEditView?id={{l.id}}" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> 编辑</a><br />
                                        <a href="/Admin/CourseSourceView?parentid={{l.id}}" class="btn btn-white btn-sm"><i class="fa fa-list"></i> 课程</a><br />
                                        <button class="btn btn-danger btn-sm" ng-click="delete(l)"><i class="fa fa-trash"></i> 删除</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.2.4.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/web/tools.js"></script>
    <script src="~/Extensions/Plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Extensions/Plugins/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/Extensions/Plugins/js/content.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/web/courselistview.js"></script>
</body>
</html>
