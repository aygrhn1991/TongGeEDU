
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CourseSourceView</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Extensions/Plugins/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Extensions/Plugins/css/animate.css" rel="stylesheet" />
    <link href="~/Extensions/Plugins/css/style.css" rel="stylesheet" />
    <style>
        .chat-users {
            margin-left: 0;
        }

        .label {
            cursor: pointer;
        }
    </style>
</head>
<body class="gray-bg" ng-app="app" ng-controller="ctrl">
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox chat-view">
                    <div class="ibox-title">
                        <h5>课程列表</h5>
                        <button id="edit" class="btn btn-primary btn-xs m-l-sm" ng-click="clear()" type="button">新增</button>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="chat-users">
                                    <div class="users-list">
                                        <div class="chat-user" ng-repeat="l in list">
                                            <span class="pull-right label label-danger" ng-click="delete(l)">删除</span>
                                            <div class="chat-user-name" ng-click="edit(l)">
                                                <a href="#">第{{l.chapter}}节&nbsp;&nbsp;{{l.title}}</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <iframe ng-show="state=='edit'" id="videoframe" src="" frameborder="0" width="600" height="400"></iframe>
                                <form class="form-horizontal">
                                    <br />
                                    <div class="form-group" ng-show="state=='add'">
                                        <label class="col-sm-2 control-label">视频：</label>
                                        <div class="col-sm-8">
                                            <input id="file" type="file" accept="audio/mp4,video/mp4" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">标题：</label>
                                        <div class="col-sm-8">
                                            <input type="text" placeholder="标题" class="form-control" ng-model="item.title">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">章节：</label>
                                        <div class="col-sm-8">
                                            <input type="text" placeholder="章节" class="form-control" ng-model="item.chapter">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-3 col-sm-8">
                                            <a ng-if="state=='add'" class="btn btn-sm btn-primary" ng-click="add()">新 增</a>
                                            <a ng-if="state=='edit'" class="btn btn-sm btn-primary" ng-click="save()">保 存</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.2.4.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/web/tools.js"></script>
    <script src="~/Extensions/Plugins/js/content.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/web/coursesourceview.js"></script>
</body>
</html>
